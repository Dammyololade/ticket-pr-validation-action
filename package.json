{
  "name": "ticket-pr-validation-action",
  "version": "1.0.4",
  "description": "GitHub Action to validate PRs against Linear tickets and trigger assistant reviews",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "test": "jest",
    "lint": "eslint src/**/*.ts __tests__/**/*.ts",
    "format": "prettier --write \"**/*.{ts,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md,yml,yaml}\""
  },
  "keywords": [
    "github-action",
    "linear",
    "pr-validation",
    "code-review",
    "linear-integration",
    "pull-request",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dammyololade/ticket-pr-validation-action.git"
  },
  "bugs": {
    "url": "https://github.com/dammyololade/ticket-pr-validation-action/issues"
  },
  "homepage": "https://github.com/dammyololade/ticket-pr-validation-action#readme",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "markdown-it": "^14.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/markdown-it": "^14.0.0",
    "@types/node": "^20.19.25",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nock": "^13.4.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
